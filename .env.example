# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
FLASK_ENV=development  # Set to 'production' for production environments
DEBUG=True # Enable/disable debug mode

# Database
DATABASE_URL=postgresql://user:password@host:port/database_name # PostgreSQL connection string

# Authentication & Security
SECRET_KEY=your_super_secret_key_here # Used for session management and signing data
# If using JWT
JWT_SECRET_KEY=your_jwt_secret_key # Used for verifying token signatures
SECURITY_PASSWORD_SALT=your_password_salt # Used to hash passwords

# External APIs
# Replace with your actual API keys if you are using external services
API_KEY_EXAMPLE=your_api_key # API key for example.com

# Runtime Configuration
PORT=5000 # Port the application will listen on
LOG_LEVEL=INFO # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)